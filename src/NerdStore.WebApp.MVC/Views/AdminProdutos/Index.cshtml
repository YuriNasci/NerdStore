@model IEnumerable<ProdutoViewModel>

@{
    ViewData["Title"] = "Vitrine";
}
<style>
    h4 {
        font-weight: 600;
    }

    p {
        font-size: 12px;
        margin-top: 5px;
    }

    .price {
        font-size: 30px;
        margin: 0 auto;
        color: #333;
    }

    .right {
        float: right;
        border-bottom: 2px solid #4B8E4B;
    }

    .thumbnail {
        opacity: 0.70;
        -webkit-transition: all 0.5s;
        transition: all 0.5s;
    }

        .thumbnail:hover {
            opacity: 1.00;
            box-shadow: 0px 0px 10px #4bc6ff;
        }

    .line {
        margin-bottom: 5px;
    }

    @@media screen and (max-width: 770px) {
        .right {
            float: left;
            width: 100%;
        }
    }

    .product_view .modal-dialog {
        max-width: 800px;
        width: 100%;
    }

    .pre-cost {
        text-decoration: line-through;
        color: #a5a5a5;
    }

    .space-ten {
        padding: 10px 0;
    }
</style>
<div class="container">

    <h3>Administração de Produtos</h3>
    <hr />

    <vc:summary />

    <div class="row" supress-by-claim-name="Produto" supress-by-claim-value="Adicionar">
        <div class="col-md-3 col-md-offset-9">
            <a asp-controller="AdminProdutos" asp-action="NovoProduto" class="btn btn-success" style="float:right">+ Adicionar Novo</a>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <div class="products">
                <!-- BEGIN PRODUCTS -->
                @{
                    if (Model != null && Model.Any())
                    {
                        foreach (var produto in Model.OrderBy(p => p.CategoriaId))
                        {
                            <div class="col-sm-6 col-md-4">
                                <div class="thumbnail">
                                    <div class="image">
                                        <img src="~/Images/@produto.Imagem" style="height:300px" />
                                    </div>
                                    <div class="caption">
                                        <h4>@produto.Nome</h4>
                                        <p>@produto.QuantidadeEstoque em estoque</p>
                                        <p>@produto.Descricao</p>
                                        <p class="price">@produto.Valor.ToString("C")</p>
                                        <hr class="line">
                                        <div class="row">
                                            <div class="col-md-2" style="margin-right:20px">
                                                <a disable-by-claim-name="Produto" disable-by-claim-value="Editar" asp-controller="AdminProdutos" asp-action="AtualizarProduto" asp-route-id="@produto.Id" class="btn btn-success">Editar</a> &nbsp;
                                            </div>
                                            <div class="col-md-2">
                                                <a disable-by-claim-name="Produto" disable-by-claim-value="Editar" asp-controller="AdminProdutos" asp-action="AtualizarEstoque" asp-route-id="@produto.Id" class="btn btn-info">Estoque</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    }
                    else
                    {
                        <div class="alert alert-light" role="alert">
                            <p>Não exitem produtos cadastrados.</p>
                        </div>
                    }
                }

                <!-- END PRODUCTS -->
            </div>
        </div>
    </div>
</div>

